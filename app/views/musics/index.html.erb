<%- model_class = Music -%>
<%= render 'shared/common_header' %>

<div class="container">
    <div class="hero-unit">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
        <p class="lead">These are my played musics on
            <%= link_to t('.youtube', :default => t("helpers.links.youtube")),
                "http://www.youtube.com/user/Sukesan1984",
                :class => 'btn btn-link' %><br>
                If you download the sheet, please subscribe me on Youtube or like Facebook page.<br>
        </p>
    
       <p class="yotube">
           <iframe src="http://www.youtube.com/subscribe_widget?local=en_US&p=Sukesan1984" 
               style="overflow: hidden; height: 105px; width: 300px; border: 0;" 
               scrolling="no" frameBorder="0">
           </iframe><br>
       </p>
    
       <p class="facebook">
       <iframe src="//www.facebook.com/plugins/like.php?locale=en_US&href=http%3A%2F%2Fwww.facebook.com%2Fsukesan1984page&amp;send=false&amp;layout=standard&amp;width=400&amp;show_faces=false&amp;font=arial&amp;colorscheme=light&amp;action=like&amp;height=35" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:400px; height:35px;" allowTransparency="true"></iframe>
        </p>
    
    </div>
    <script type="text/javascript"><!--
    google_ad_client = "ca-pub-9321975971123036";
