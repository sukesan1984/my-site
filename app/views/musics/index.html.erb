    google_ad_slot = "9656601130";
    google_ad_width = 336;
    google_ad_height = 280;
    //-->
    </script>
    <script type="text/javascript"
    src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
    </script>
    
    <section class="-download">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:title) %></th>
          <th><%= model_class.human_attribute_name(:description) %></th>
          <th><%= model_class.human_attribute_name(:composer) %></th>
          <th><%=t '.music_sheet', :default => t("helpers.music_sheet") %></th>
          <th>Total Downloads</th>
        </tr>
      </thead>
      <tbody>
        <% @musics.each do |music| %>
          <tr>
            <td><%= music.title %></td>
            <td><%= music.description %></td>
            <td><%= music.composer %></td>
            <td><%= link_to t('.download', :default => t("helpers.links.download")),
                download_music_path(music),
                :class => 'btn btn-primary' %></td>
            <td><%= music.num_download %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </section>
