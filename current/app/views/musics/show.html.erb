<%- model_class = Music -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @music.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @music.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_url) %>:</strong></dt>
  <dd><%= @music.image_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:download_path) %>:</strong></dt>
  <dd><%= @music.download_path %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_download) %>:</strong></dt>
  <dd><%= @music.num_download %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              musics_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_music_path(@music), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              music_path(@music),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
